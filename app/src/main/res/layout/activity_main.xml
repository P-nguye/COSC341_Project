<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/toTrackerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toTracker"
            android:text="Go to Garden Tracker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/openCreateCropButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Create Crop Page" />

        <Button
            android:id="@+id/toSchedulesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Schedules Page" />

        <Button
            android:id="@+id/btnHarvestReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Harvest Report"
            android:layout_gravity="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>